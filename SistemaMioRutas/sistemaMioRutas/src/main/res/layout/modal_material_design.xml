<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_modal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@null"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_post" >

        <TextView
            android:id="@+id/title_modal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text=""
            android:textColor="#4285F4"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/container_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingBottom="8dp" >

            <Button
                android:id="@+id/cancel_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingRight="30dp"
                android:text="@android:string/cancel"
                android:textColor="#888"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/accept_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingRight="30dp"
                android:text="@android:string/ok"
                android:textColor="#4285F4"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_modal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/container_buttons"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title_modal"
            android:maxLines="4"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text=""
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>