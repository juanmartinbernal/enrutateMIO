<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/degradado"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/pasaje"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text=""
        android:textColor="#fff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pasaje"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/expresos"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_expreso" />

        <ImageView
            android:id="@+id/pretroncales"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_pretroncal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/alimentadores"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_alimentador" />

        <ImageView
            android:id="@+id/troncales"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_troncal" />
    </LinearLayout>

    <TextView
        android:id="@+id/adicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/informacionadicional"
        android:textColor="#fff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adicional"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/integraciones"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_integracion" />

        <ImageView
            android:id="@+id/recargas"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/boton_recarga" />
    </LinearLayout>

    <TextView
        android:id="@+id/hola"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pasaje"
        android:gravity="center"
        android:text=""
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>