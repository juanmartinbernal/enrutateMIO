<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="180dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/widget_bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnTravel"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:src="@drawable/icono_trazarruta" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />

            <ImageView
                android:id="@+id/btnStations"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:src="@drawable/icono_estaciones_menu" />

            
            
            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />
            
            <ImageView
                android:id="@+id/btnRoutes"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:src="@drawable/ic_infomio" />
            
            
            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />

            <ImageView
                android:id="@+id/btnNews"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:src="@drawable/ic_noticias" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="32dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnAlimentadores"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/busalimentador" />
            
            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />

            <ImageView
                android:id="@+id/btnExpreso"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/busexpreso" />
            
            
            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />

            <ImageView
                android:id="@+id/btnPreTroncal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/buspretroncal" />
            
            
            <TextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:alpha="0.3"
                android:background="#c3c3c3" />

            <ImageView
                android:id="@+id/btnTroncal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/bustroncal" />
        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="17dp"
            android:alpha="0.3"
            android:background="#c3c3c3" />
    </RelativeLayout>

</RelativeLayout>